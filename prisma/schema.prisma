generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- NextAuth 認証モデル ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts   Account[]
  sessions   Session[]
  judgments  Judgment[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- アプリケーションモデル ---

model Judgment {
  id           String   @id @default(cuid())
  content      String   // 判断したこと（1行）
  energy       String   // high / mid / low（体力）
  time         String   // plenty / normal / tight（時間）
  mind         String   // clear / normal / cloudy（心）
  premise      String   @db.Text // その時の前提（1〜2行）
  alternatives String   @default("") // 見送った選択肢
  tags         String   @default("") // カンマ区切りタグ
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  reflections Reflection[]
}

model Reflection {
  id         String   @id @default(cuid())
  judgmentId String
  judgment   Judgment  @relation(fields: [judgmentId], references: [id], onDelete: Cascade)
  response   String   @db.Text // AIからの問い返し全文
  answer     String   @default("") @db.Text // ユーザーの回答（任意）
  createdAt  DateTime @default(now())
}
